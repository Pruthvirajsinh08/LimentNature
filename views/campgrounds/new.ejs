<% include  ../partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Add New Campground</h1>

		<div style="width: 30%; margin: 30px auto;">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="campground[name]" placeholder="name">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="campground[image]" placeholder="img-url">
				</div>
				<div class="form-group">
					<div class="input-group text-center">
						<label>Price:</label>
						<input type="string" name="campground[price][currency]" placeholder="currency" style="width: 22%;">
						<input type="string" name="campground[price][rate]" placeholder="rate" style="width: 22%;">
						<label>per</label>
						<label class="radio-inline">
							<input type="radio" name="campground[price][time]" id="day" value="day">Day
						</label>
						<label class="radio-inline">
							<input type="radio" name="campground[price][time]" id="night" value="night">Night
						</label>
					</div>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="campground[description]" placeholder="description">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>

			<a href="/campgrounds">Go Back</a>
		</div>
		
	</div>
</div>

<% include ../partials/footer %>